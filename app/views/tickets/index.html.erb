<% content_for :title, "My Tickets" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
    <div class="mb-4 md:mb-0">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 tracking-tight">
        My <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Tickets</span>
      </h1>
      <p class="mt-2 text-lg text-gray-600">View and manage your event tickets</p>
    </div>
    
    <div class="flex items-center space-x-4">
      <span class="text-sm text-gray-500">Total Tickets: <%= @tickets.count %></span>
      <%= link_to events_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Browse Events
      <% end %>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-lg shadow-sm mb-6 p-1">
    <div class="flex space-x-1">
      <%= link_to tickets_path, 
          class: "flex-1 text-center py-2 px-4 rounded-md text-sm font-medium transition-colors #{params[:status].blank? ? 'bg-blue-100 text-blue-700' : 'text-gray-500 hover:text-gray-700'}" do %>
        All Tickets
      <% end %>
      <%= link_to tickets_path(status: 'active'), 
          class: "flex-1 text-center py-2 px-4 rounded-md text-sm font-medium transition-colors #{params[:status] == 'active' ? 'bg-green-100 text-green-700' : 'text-gray-500 hover:text-gray-700'}" do %>
        Active
      <% end %>
      <%= link_to tickets_path(status: 'used'), 
          class: "flex-1 text-center py-2 px-4 rounded-md text-sm font-medium transition-colors #{params[:status] == 'used' ? 'bg-gray-100 text-gray-700' : 'text-gray-500 hover:text-gray-700'}" do %>
        Used
      <% end %>
      <%= link_to tickets_path(status: 'cancelled'), 
          class: "flex-1 text-center py-2 px-4 rounded-md text-sm font-medium transition-colors #{params[:status] == 'cancelled' ? 'bg-red-100 text-red-700' : 'text-gray-500 hover:text-gray-700'}" do %>
        Cancelled
      <% end %>
    </div>
  </div>

  <!-- Tickets Grid -->
  <% if @tickets.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tickets.each do |ticket| %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-blue-200 group">
          <!-- Ticket Header -->
          <div class="bg-gradient-to-r from-gray-50 to-blue-50 px-6 py-4 border-b border-gray-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 rounded-full <%= 
                  case ticket.status
                  when 'active' then 'bg-green-400 animate-pulse'
                  when 'used' then 'bg-gray-400'
                  when 'cancelled' then 'bg-red-400'
                  when 'refunded' then 'bg-yellow-400'
                  else 'bg-gray-400'
                  end %>"></div>
                <span class="text-sm font-medium text-gray-500 uppercase tracking-wider">
                  <%= ticket.status.capitalize %>
                </span>
              </div>
              <div class="text-xs text-gray-400 bg-white px-2 py-1 rounded-full">
                #<%= ticket.id.to_s.first(8) %>
              </div>
            </div>
          </div>

          <!-- Ticket Content -->
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
              <%= link_to ticket.event.name, event_path(ticket.event) %>
            </h3>
            
            <!-- Event Details -->
            <div class="space-y-2 text-sm text-gray-600 mb-4">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span><%= ticket.event.start_date&.strftime("%B %d, %Y") %></span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>
                  <%= ticket.event.start_time&.strftime("%I:%M %p") %> - <%= ticket.event.end_time&.strftime("%I:%M %p") %>
                </span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span><%= ticket.event.venue %></span>
              </div>
            </div>

            <!-- Ticket Details -->
            <div class="bg-gray-50 rounded-lg p-3 mb-4">
              <div class="grid grid-cols-2 gap-3 text-sm">
                <div>
                  <span class="font-medium text-gray-500">Type:</span>
                  <p class="text-gray-900"><%= ticket.ticket_type.capitalize %></p>
                </div>
                <div>
                  <span class="font-medium text-gray-500">Price:</span>
                  <p class="text-gray-900 font-semibold">$<%= ticket.price %></p>
                </div>
                <% if ticket.seat_number.present? %>
                  <div>
                    <span class="font-medium text-gray-500">Seat:</span>
                    <p class="text-gray-900"><%= ticket.seat_number %></p>
                  </div>
                <% end %>
                <div>
                  <span class="font-medium text-gray-500">Purchased:</span>
                  <p class="text-gray-900"><%= ticket.created_at.strftime("%m/%d/%Y") %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="px-6 pb-6">
            <div class="flex gap-2">
              <%= link_to ticket_path(ticket), class: "flex-1 text-center px-4 py-2 bg-blue-50 hover:bg-blue-100 text-blue-700 font-medium rounded-lg transition-colors duration-200" do %>
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View QR Code
              <% end %>
              
              <% if ticket.can_be_cancelled? %>
                <%= button_to event_ticket_path(ticket.event, ticket), method: :delete, 
                    class: "flex-1 text-center px-4 py-2 bg-red-50 hover:bg-red-100 text-red-700 font-medium rounded-lg transition-colors duration-200 border-0",
                    data: { confirm: "Are you sure you want to cancel this ticket?" } do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  Cancel
                <% end %>
              <% else %>
                <span class="flex-1 text-center px-4 py-2 bg-gray-50 text-gray-400 font-medium rounded-lg cursor-not-allowed">
                  <% if ticket.status == 'used' %>
                    Used
                  <% elsif ticket.status == 'cancelled' %>
                    Cancelled
                  <% else %>
                    Non-cancellable
                  <% end %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Tickets Summary -->
    <div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="mb-4 md:mb-0">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Ticket Summary</h3>
          <div class="flex space-x-6 text-sm">
            <div>
              <span class="text-gray-500">Active:</span>
              <span class="font-semibold text-green-600"><%= @tickets.active.count %></span>
            </div>
            <div>
              <span class="text-gray-500">Used:</span>
              <span class="font-semibold text-gray-600"><%= @tickets.used.count %></span>
            </div>
            <div>
              <span class="text-gray-500">Cancelled:</span>
              <span class="font-semibold text-red-600"><%= @tickets.cancelled.count %></span>
            </div>
            <div>
              <span class="text-gray-500">Total Spent:</span>
              <span class="font-semibold text-blue-600">$<%= @tickets.sum(:price) %></span>
            </div>
          </div>
        </div>
        <div>
          <%= link_to events_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Get More Tickets
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a1 1 0 001 1h1a1 1 0 001-1V7a2 2 0 00-2-2H5zM5 14a2 2 0 00-2 2v3a1 1 0 001 1h1a1 1 0 001-1v-3a2 2 0 00-2-2H5z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No Tickets Yet</h3>
      <p class="text-gray-600 mb-6">You haven't purchased any event tickets yet. Browse our upcoming events to get started!</p>
      <%= link_to events_path, class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Browse Events
      <% end %>
    </div>
  <% end %>
</div>
