<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New Team</h1>
    <div class="flex gap-2">
      <%= link_to 'View All Teams', volunteers_teams_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Volunteers', volunteers_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back', volunteers_teams_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @volunteers_team, local: true) do |form| %>
      <% if @volunteers_team.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4><%= pluralize(@volunteers_team.errors.count, "error") %> prohibited this team from being saved:</h4>
          <ul class="list-disc list-inside">
            <% @volunteers_team.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :name, 'Team Name', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :name, rows: 3,
                           class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :district, 'District', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :district, rows: 2,
                           class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="flex items-center justify-end space-x-3">
        <%= form.submit 'Create Team', class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= link_to 'Cancel', volunteers_teams_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
