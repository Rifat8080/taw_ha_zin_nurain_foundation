<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Volunteer Teams</h1>
    <div class="flex gap-2">
      <%= link_to 'New Team', new_volunteers_team_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Volunteers', volunteers_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Team Assignments', team_assignments_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Work Orders', work_orders_path, class: 'bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="mb-4 flex gap-4 items-center">
    <%= form_with url: volunteers_teams_path, method: :get, local: true, class: 'flex gap-4 items-center' do |form| %>
      <%= form.select :district, options_for_select([['All Districts', '']] + district_options, params[:district]), 
                      {}, { class: 'border border-gray-300 rounded px-3 py-2' } %>
      <%= form.submit 'Filter', class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <% if params[:district].present? %>
        <%= link_to 'Clear Filter', volunteers_teams_path, class: 'bg-red-400 hover:bg-red-600 text-white font-bold py-2 px-4 rounded' %>
      <% end %>
    <% end %>
    
    <div class="ml-auto text-sm text-gray-600">
      Total: <%= @volunteers_teams.count %> teams
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @volunteers_teams.each do |team| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-xl font-semibold text-gray-900"><%= team.name %></h3>
            <%= team_status_badge(team) %>
          </div>
          <p class="text-gray-600 mb-4"><%= team.district %></p>
          
          <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
            <span><%= link_to "#{team.volunteers_count} volunteers", team_assignments_path(team_id: team.id), class: 'text-blue-600 hover:text-blue-900' %></span>
            <span><%= link_to "#{team.active_work_orders_count} active orders", work_orders_path(team_id: team.id), class: 'text-orange-600 hover:text-orange-900' %></span>
          </div>

          <div class="grid grid-cols-2 gap-2 mb-3">
            <%= link_to 'View Details', team, class: 'bg-indigo-500 hover:bg-indigo-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'Edit Team', edit_volunteers_team_path(team), class: 'bg-green-500 hover:bg-green-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'Add Member', new_team_assignment_path(team_id: team.id), class: 'bg-blue-500 hover:bg-blue-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'New Work Order', new_work_order_path(team_id: team.id), class: 'bg-orange-500 hover:bg-orange-700 text-white text-center py-2 px-3 rounded text-sm' %>
          </div>
          
          <div class="text-center">
            <%= link_to 'Delete Team', team, method: :delete, 
                        data: { confirm: 'Are you sure? This will remove all team assignments and work orders.' }, 
                        class: 'w-full bg-red-500 hover:bg-red-700 text-white text-center py-2 px-3 rounded text-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @volunteers_teams.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500">No teams found.</p>
    </div>
  <% end %>
</div>
