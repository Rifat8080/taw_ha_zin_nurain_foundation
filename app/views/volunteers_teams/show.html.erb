<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @volunteers_team.name %></h1>
    <div class="flex gap-2">
      <%= link_to 'Edit Team', edit_volunteers_team_path(@volunteers_team), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Add Member', new_team_assignment_path(team_id: @volunteers_team.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'New Work Order', new_work_order_path(team_id: @volunteers_team.id), class: 'bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Delete Team', @volunteers_team, method: :delete, 
                  data: { confirm: 'Are you sure? This will remove all team assignments and work orders.' }, 
                  class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to Teams', volunteers_teams_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Team Information</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Basic details about the volunteer team.</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Team name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteers_team.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">District</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteers_team.district %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Total volunteers</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteers_team.volunteers_count %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Active work orders</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteers_team.active_work_orders_count %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Team Members -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Team Members</h2>
      <%= link_to 'Add Member', new_team_assignment_path(team_id: @volunteers_team.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
    
    <% if @team_volunteers.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @team_volunteers.each do |volunteer| %>
            <li>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div>
                      <p class="text-sm font-medium text-indigo-600">
                        <%= link_to volunteer.full_name, volunteer, class: 'hover:text-indigo-900' %>
                      </p>
                      <p class="text-sm text-gray-500"><%= volunteer.email %></p>
                      <p class="text-xs text-gray-400">Joined team: <%= @team_assignments.find { |ta| ta.volunteer_id == volunteer.id }&.created_at&.strftime('%B %d, %Y') %></p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <%= volunteer_role_badge(volunteer.role) %>
                    <%= link_to 'View', volunteer, class: 'bg-indigo-500 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs' %>
                    <%= link_to 'Remove', @team_assignments.find { |ta| ta.volunteer_id == volunteer.id }, method: :delete, 
                                data: { confirm: 'Remove this volunteer from the team?' }, 
                                class: 'bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded text-xs' if @team_assignments.find { |ta| ta.volunteer_id == volunteer.id } %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No team members yet.</p>
        <%= link_to 'Add First Member', new_team_assignment_path(team_id: @volunteers_team.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>

  <!-- Work Orders -->
  <div>
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Work Orders</h2>
      <%= link_to 'New Work Order', new_work_order_path(team_id: @volunteers_team.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
    
    <% if @work_orders.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @work_orders.each do |work_order| %>
            <li>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <p class="text-sm font-medium text-indigo-600">
                      <%= link_to work_order.title, work_order, class: 'hover:text-indigo-900' %>
                    </p>
                    <p class="text-sm text-gray-500"><%= truncate(work_order.description, length: 100) %></p>
                    <div class="mt-2">
                      <p class="text-xs text-gray-500">
                        Assigned by <%= work_order.assigned_by_name %> for <%= work_order.assigned_date.strftime('%B %d, %Y') %>
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2 ml-4">
                    <%= work_order_status_badge(work_order) %>
                    <%= days_until_badge(work_order) %>
                    <div class="flex space-x-1">
                      <%= link_to 'View', work_order, class: 'bg-indigo-500 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs' %>
                      <%= link_to 'Edit', edit_work_order_path(work_order), class: 'bg-green-500 hover:bg-green-700 text-white px-3 py-1 rounded text-xs' %>
                      <%= link_to 'Delete', work_order, method: :delete, 
                                  data: { confirm: 'Are you sure?' }, 
                                  class: 'bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded text-xs' %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No work orders yet.</p>
        <%= link_to 'Create First Work Order', new_work_order_path(team_id: @volunteers_team.id), class: 'bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>
