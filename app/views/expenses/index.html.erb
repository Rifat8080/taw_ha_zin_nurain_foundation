<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Expenses</h1>
    <%= link_to "New Expense", new_expense_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @expenses.each do |expense| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= expense.title %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-red-600">$<%= expense.amount %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= expense.project.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= expense.expense_date.strftime("%B %d, %Y") %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View", expense_path(expense), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
              <%= link_to "Edit", edit_expense_path(expense), class: "text-yellow-600 hover:text-yellow-900 mr-2" %>
              <%= link_to "Delete", expense_path(expense), method: :delete, 
                          confirm: "Are you sure?", 
                          class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @expenses.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No expenses found.</p>
        <%= link_to "Create the first expense", new_expense_path, class: "text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
