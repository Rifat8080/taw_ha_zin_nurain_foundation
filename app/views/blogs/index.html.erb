<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 py-12">
  <% (defined?(blogs) ? blogs : @blogs).each do |blog| %>
    <div class="bg-white rounded-2xl shadow-lg flex flex-col overflow-hidden hover:shadow-2xl transition-all">
      <% if blog.images.attached? && blog.images.any? %>
        <%= image_tag blog.images.first, class: "w-full h-48 object-cover", alt: blog.title %>
      <% end %>
      <div class="p-6 flex flex-col flex-1">
        <h3 class="text-2xl font-bold mb-2 text-foundationprimarygreen"><%= blog.title %></h3>
        <div class="text-sm text-gray-500 mb-2">By <%= blog.author %> | <%= blog.published_at&.strftime('%b %d, %Y') %></div>
        <p class="text-gray-700 mb-4 line-clamp-3 flex-1"><%= truncate(blog.body, length: 120) %></p>
        <%= link_to 'Read More', blog_path(blog), data: { turbo_frame: 'blog-main' }, class: "inline-block mt-auto px-5 py-2 rounded-lg bg-foundationprimarygreen text-white font-semibold hover:bg-green-700 transition-colors text-base" %>
      </div>
    </div>
  <% end %>
  <% if (defined?(blogs) ? blogs : @blogs).empty? %>
    <div class="col-span-full text-center text-gray-400">No blog posts yet.</div>
  <% end %>
</div>
