<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Expense Details</h1>
          <p class="text-gray-600 mt-1">For healthcare request: <span class="font-semibold"><%= @healthcare_request.patient_name %></span></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to healthcare_request_healthcare_expenses_path(@healthcare_request), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Expenses
          <% end %>
          <% if current_user.role == 'admin' || @healthcare_expense.user == current_user %>
            <%= link_to edit_healthcare_request_healthcare_expense_path(@healthcare_request, @healthcare_expense), 
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Expense
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Expense Details -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Expense Information</h2>
      </div>
      
      <div class="p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @healthcare_expense.description %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Category</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= @healthcare_expense.category %>
              </span>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Amount</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @healthcare_expense.formatted_amount %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Expense Date</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @healthcare_expense.expense_date.strftime("%B %d, %Y") %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Added By</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @healthcare_expense.user.full_name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Added On</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @healthcare_expense.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>

          <% if @healthcare_expense.receipt_url.present? %>
            <div class="md:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Receipt/Document</dt>
              <dd class="mt-1">
                <%= link_to @healthcare_expense.receipt_url, target: "_blank", 
                    class: "inline-flex items-center text-sm text-indigo-600 hover:text-indigo-500" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  View Receipt
                <% end %>
              </dd>
            </div>
          <% end %>

          <% if @healthcare_expense.notes.present? %>
            <div class="md:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Notes</dt>
              <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @healthcare_expense.notes %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <!-- Actions -->
    <% if current_user.role == 'admin' || @healthcare_expense.user == current_user %>
      <div class="mt-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
        <div class="flex space-x-3">
          <%= link_to edit_healthcare_request_healthcare_expense_path(@healthcare_request, @healthcare_expense), 
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Expense
          <% end %>
          
          <%= link_to healthcare_request_healthcare_expense_path(@healthcare_request, @healthcare_expense), 
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700",
              data: { confirm: "Are you sure you want to delete this expense? This action cannot be undone." } do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Expense
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
