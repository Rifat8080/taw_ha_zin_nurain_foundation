<% content_for :title, "Events" %>
<div class="container mx-auto px-4 py-8">
  <!-- Success Notice -->
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-forange/10 border-l-4 border-forange rounded-r-lg shadow-sm flex items-center" id="notice">
      <svg class="h-5 w-5 text-forange mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span class="text-forange font-medium"><%= notice %></span>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-center text-center mb-8 gap-4">
    <div class="w-full">
      <h1 class="text-4xl md:text-5xl font-bold text-foundationprimarygreen tracking-tight text-center">
        <% if @filter_status %>
          <span class="text-forange"><%= @filter_status.capitalize %></span> Events
        <% else %>
          Our <span class="text-forange">Events</span>
        <% end %>
      </h1>
      <p class="mt-2 text-lg text-gray-700 text-center">
        <% if @filter_status %>
          Events with <span class="text-forange"><%= @filter_status.downcase %></span> status
        <% else %>
          Join us for <span class="text-forange">exciting events</span> and gatherings
        <% end %>
      </p>
      <% if @filter_status %>
        <div class="mt-3 flex items-center justify-center space-x-2">
          <% if @filter_status %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-forange/10 text-forange border border-forange">
              <%= @filter_status.capitalize %>
            </span>
          <% end %>
          <%= link_to events_path, class: "inline-flex items-center px-2 py-1 text-sm text-gray-600 hover:text-forange transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Clear filter
          <% end %>
        </div>
      <% end %>
    </div>
    
  </div>

  <!-- Search and Filter Section -->
  <div class="mb-8 bg-white rounded-lg shadow border border-foundationprimarygreen/20 p-6">
    <%= form_with url: events_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4" do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, placeholder: "Search by event name, venue...",
            value: params[:search],
            class: "w-full px-4 py-3 border border-foundationprimarygreen/30 rounded-lg focus:ring-2 focus:ring-forange focus:border-forange text-gray-900 placeholder-gray-500" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Search", class: "px-6 py-3 bg-forange hover:bg-foundationprimarygreen text-white font-semibold rounded-lg transition-all duration-200 transform will-change-transform hover:scale-105 hover:shadow-xl" %>
        <% if params[:search].present? || @filter_category || @filter_status %>
          <%= link_to "Clear", events_path, class: "px-6 py-3 bg-gray-200 hover:bg-forange text-gray-700 font-semibold rounded-lg transition-colors" %>
        <% end %>
      </div>
    <% end %>
    
    <div class="mt-4 flex flex-wrap gap-2">
      <span class="text-sm font-medium text-gray-600 mr-2">Filter by status:</span>
      <% %w[upcoming active past].each do |status| %>
        <%= link_to events_path(status: status), 
            class: "inline-flex items-center px-3 py-1 rounded-full text-sm #{ @filter_status == status ? 'bg-forange/10 text-forange border border-forange' : 'bg-gray-100 text-gray-700 hover:bg-forange/10 hover:text-forange border border-transparent'} transition-colors" do %>
          <%= status.capitalize %>
        <% end %>
      <% end %>
    </div>
  </div>
<% if current_user&.role == "admin" %>
      <div class="flex gap-3 mb-10 w-full md:w-auto">
        <%= link_to new_event_path, class: "w-full md:w-auto inline-flex items-center whitespace-nowrap px-6 py-3 bg-foundationprimarygreen hover:bg-forange text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
          <i class="fa-solid fa-plus mr-2" aria-hidden="true"></i>
          New Event
        <% end %>
      </div>
    <% end %>
  <!-- Events Grid -->
  <div id="events" class="relative z-10">
    <% if @events.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @events.each do |event| %>
          <%= render 'event_card', event: event %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0h6a2 2 0 012 2v10a2 2 0 01-2 2H10a2 2 0 01-2-2V9a2 2 0 012-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No events found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new event.</p>
        <div class="mt-6">
          <%= link_to new_event_path, class: "w-full md:w-auto inline-flex items-center whitespace-nowrap px-6 py-3 bg-foundationprimarygreen hover:bg-forange text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
            <i class="fa-solid fa-plus mr-2" aria-hidden="true"></i>
            New Event
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
