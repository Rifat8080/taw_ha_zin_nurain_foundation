<!-- Modern Event Card Partial -->
<div class="relative bg-white rounded-3xl shadow-xl transition-all duration-300 border border-gray-100 hover:border-foundationprimarygreen group overflow-hidden flex flex-col transform-gpu will-change-transform hover:scale-[1.03] hover:-translate-y-2 hover:shadow-3xl hover:shadow-foundationprimarygreen/20 hover:z-20 hover:rotate-x-2 hover:rotate-y-1" style="perspective: 1200px;">
  <!-- Status Ribbon -->
  <div class="absolute top-4 left-0 z-20 px-4 py-1 rounded-r-2xl text-xs font-bold tracking-wider shadow-md
    <%= event.event_status == 'upcoming' ? 'bg-green-400 text-white' : 
        event.event_status == 'active' ? 'bg-blue-400 text-white' : 
        'bg-gray-400 text-white' %>">
    <%= event.event_status.capitalize %>
  </div>

  <!-- Event Image -->
  <div class="relative w-full aspect-[4/3] sm:aspect-[16/9] bg-gray-100 flex items-center justify-center overflow-hidden">
    <% if event.event_image.attached? %>
      <%= image_tag event.event_image, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-300 text-6xl">
        <i class="fas fa-calendar-alt"></i>
      </div>
    <% end %>
    <div class="absolute bottom-2 left-2 bg-white/80 text-foundationprimarygreen text-xs font-semibold px-3 py-1 rounded-full shadow">
      <%= event.ticket_category.capitalize %>
    </div>
  </div>

  <!-- Event Content -->
  <div class="flex-1 flex flex-col p-4 sm:p-6 gap-2">
    <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-1 group-hover:text-foundationprimarygreen transition-colors"><%= event.name %></h3>
    <p class="text-gray-600 mb-2 line-clamp-3 text-sm sm:text-base"><%= event.venue %></p>
    
    <div class="text-sm text-gray-600 flex-grow">
      <p><strong>Date:</strong> <%= event.start_date.strftime("%B %d, %Y") %> 
      <% if event.start_date != event.end_date %>
        - <%= event.end_date.strftime("%B %d, %Y") %>
      <% end %></p>
      <p><strong>Time:</strong> <%= event.start_time.strftime("%I:%M %p") %> - <%= event.end_time.strftime("%I:%M %p") %></p>
    </div>

  <div class="mt-4 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
      <div class="text-sm text-gray-600">
        <p><strong>Price:</strong> $<%= event.ticket_price %></p>
        <p><strong>Available:</strong> <%= event.available_seats %> / <%= event.total_seats %></p>
      </div>
    </div>

  <div class="flex flex-col sm:flex-row gap-2 mt-auto items-stretch sm:items-center flex-wrap sm:flex-nowrap">
  <%= link_to event_path(event), class: "w-full sm:flex-1 inline-flex items-center justify-center px-3 sm:px-4 py-2 bg-[rgb(var(--color-foundationprimarygreen))] text-white text-sm sm:text-base font-semibold rounded-lg transition-all duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-[rgb(var(--color-foundationprimarygreen))]/60 transform will-change-transform hover:shadow-lg hover:shadow-[rgba(var(--color-foundationprimarygreen),0.25)] hover:-translate-y-1 hover:scale-105 active:scale-95 min-h-[44px]" do %>
        <i class="fas fa-eye mr-2 sm:mr-3" aria-hidden="true"></i>
        <span class="whitespace-nowrap">View</span>
      <% end %>
      <% if event.event_status == 'past' || event.sold_out? %>
        <button disabled class="w-full sm:flex-1 inline-flex items-center justify-center px-4 py-2 bg-gray-200 text-gray-500 font-semibold rounded-lg transition-all duration-200 shadow-sm cursor-not-allowed min-h-[44px]">
          <i class="fas fa-ticket-alt mr-2" aria-hidden="true"></i>
          <span class="whitespace-nowrap">Book Ticket</span>
        </button>
      <% else %>
        <!-- Book Ticket opens a modal with ticket type options -->
        <button type="button" onclick="document.getElementById('ticket-modal-<%= event.id %>').classList.remove('hidden')" class="w-full sm:flex-1 inline-flex items-center justify-center px-3 sm:px-4 py-2 bg-forange btn-book-ticket text-white text-sm sm:text-base font-semibold rounded-lg transition-all duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-forange/60 hover:shadow-lg hover:shadow-forange/25 hover:-translate-y-1 hover:scale-105 whitespace-nowrap min-h-[44px]">
          <i class="fas fa-ticket-alt mr-2 sm:mr-3" aria-hidden="true"></i>
          <span class="whitespace-nowrap">Book Ticket</span>
        </button>

        <!-- Modal: Ticket Type Selector -->
        <div id="ticket-modal-<%= event.id %>" class="hidden fixed inset-0 z-50 flex items-center justify-center px-4">
          <div class="absolute inset-0 bg-black/40" onclick="document.getElementById('ticket-modal-<%= event.id %>').classList.add('hidden')" aria-hidden="true"></div>
          <div role="dialog" aria-modal="true" aria-labelledby="ticket-modal-title-<%= event.id %>" class="relative bg-white rounded-lg shadow-xl max-w-md w-full mx-auto p-4">
            <div class="flex items-center justify-between mb-3">
              <h3 id="ticket-modal-title-<%= event.id %>" class="text-lg font-medium text-gray-900">Choose a ticket for <%= event.name %></h3>
              <button type="button" onclick="document.getElementById('ticket-modal-<%= event.id %>').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">âœ•</button>
            </div>

            <div class="space-y-3">
              <% if event.ticket_types.any? %>
                <% event.available_ticket_types.each do |tt| %>
                  <% next if tt['sold_out'] %>
                  <div class="border border-gray-200 rounded-lg p-3 flex items-center justify-between">
                    <div>
                      <div class="text-sm font-medium text-gray-900"><%= tt['name'] %></div>
                      <div class="text-xs text-gray-500 uppercase"><%= tt['category'] %></div>
                      <% if tt['description'].present? %>
                        <div class="text-xs text-gray-600 mt-1"><%= tt['description'] %></div>
                      <% end %>
                    </div>
                    <div class="text-right">
                      <div class="text-lg font-bold text-gray-900 mb-2">$<%= tt['price'] %></div>
                      <%= form_with model: [event, event.tickets.build], local: true do |f| %>
                        <%= f.hidden_field :ticket_type, value: tt['category'] %>
                        <%= f.submit "Buy 1", class: "px-3 py-2 bg-green-600 text-white rounded-md text-sm" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="border border-gray-200 rounded-lg p-3">
                  <div class="text-sm text-gray-900 font-medium">Single Ticket</div>
                  <div class="text-xs text-gray-600">Price: $<%= event.ticket_price %></div>
                  <div class="mt-3">
                    <%= form_with model: [event, event.tickets.build], local: true do |f| %>
                      <%= f.submit "Buy 1 - $#{event.ticket_price}", class: "w-full px-3 py-2 bg-green-600 text-white rounded-md text-sm" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="mt-4 text-right">
              <button type="button" onclick="document.getElementById('ticket-modal-<%= event.id %>').classList.add('hidden')" class="px-4 py-2 bg-gray-100 rounded-md">Close</button>
            </div>
          </div>
        </div>
      <% end %>
      <% if current_user&.role == "admin" %>
        <%= link_to edit_event_path(event), class: "w-full sm:flex-1 inline-flex items-center justify-center px-3 sm:px-4 py-2 bg-[rgb(var(--color-foundation-secondary))] text-white text-sm sm:text-base font-semibold rounded-lg transition-all duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-[rgb(var(--color-foundation-secondary))]/60 transform will-change-transform hover:shadow-lg hover:shadow-[rgba(var(--color-foundation-secondary),0.25)] hover:-translate-y-1 hover:scale-105 active:scale-95 min-h-[44px]" do %>
          <i class="fas fa-edit mr-2 sm:mr-3" aria-hidden="true"></i>
          <span class="whitespace-nowrap">Edit</span>
        <% end %>
        <%= button_to event_path(event), method: :delete, data: { confirm: t('events.confirm_delete', default: 'Are you sure you want to delete this event?') }, class: "w-full sm:flex-1 inline-flex items-center justify-center px-3 sm:px-4 py-2 btn-delete border text-white text-sm sm:text-base font-semibold rounded-lg transition-all duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-[rgb(var(--color-error))]/60 hover:shadow-lg hover:shadow-[rgba(var(--color-error),0.12)] hover:-translate-y-1 hover:scale-105 active:scale-95 min-h-[44px]" do %>
          <i class="fas fa-trash-alt mr-2 sm:mr-3" aria-hidden="true"></i>
          <span class="whitespace-nowrap">Delete</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>