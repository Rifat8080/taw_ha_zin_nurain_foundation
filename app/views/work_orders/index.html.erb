<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Work Orders</h1>
    <div class="flex gap-2">
      <%= link_to 'New Work Order', new_work_order_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Teams', volunteers_teams_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Volunteers', volunteers_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="mb-4 flex gap-4 flex-wrap items-center">
    <%= form_with url: work_orders_path, method: :get, local: true, class: 'flex gap-4 flex-wrap items-center' do |form| %>
      <%= form.select :status, 
                      options_for_select([['All Status', ''], ['Upcoming', 'upcoming'], ['Past', 'past']], params[:status]), 
                      {}, { class: 'border border-gray-300 rounded px-3 py-2' } %>
      <%= form.submit 'Filter', class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <% if params[:status].present? %>
        <%= link_to 'Clear Filter', work_orders_path, class: 'bg-red-400 hover:bg-red-600 text-white font-bold py-2 px-4 rounded' %>
      <% end %>
    <% end %>
    
    <div class="ml-auto text-sm text-gray-600">
      Total: <%= @work_orders.count %> work orders
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @work_orders.each do |work_order| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-lg font-semibold text-gray-900 truncate"><%= work_order.title %></h3>
            <%= work_order_status_badge(work_order) %>
          </div>
          
          <p class="text-gray-600 text-sm mb-3"><%= truncate(work_order.description, length: 100) %></p>
          
          <div class="text-sm text-gray-500 mb-3">
            <p><strong>Team:</strong> <%= link_to work_order.team_name, work_order.volunteers_team, class: 'text-blue-600 hover:text-blue-900' %></p>
            <p><strong>District:</strong> <%= work_order.team_district %></p>
            <p><strong>Assigned by:</strong> <%= work_order.assigned_by_name %></p>
            <p><strong>Date:</strong> <%= work_order.assigned_date.strftime('%B %d, %Y') %></p>
          </div>

          <div class="flex items-center justify-between mb-4">
            <%= days_until_badge(work_order) %>
            <span class="text-xs text-gray-500"><%= pluralize(work_order.checklist_items.count, 'task') %></span>
          </div>

          <div class="grid grid-cols-2 gap-2 mb-3">
            <%= link_to 'View Details', work_order, class: 'bg-indigo-500 hover:bg-indigo-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'Edit', edit_work_order_path(work_order), class: 'bg-green-500 hover:bg-green-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'View Team', work_order.volunteers_team, class: 'bg-purple-500 hover:bg-purple-700 text-white text-center py-2 px-3 rounded text-sm' %>
            <%= link_to 'Duplicate', new_work_order_path(team_id: work_order.team_id), class: 'bg-blue-500 hover:bg-blue-700 text-white text-center py-2 px-3 rounded text-sm' %>
          </div>
          
          <div class="text-center">
            <%= link_to 'Delete', work_order, method: :delete, 
                        data: { confirm: 'Are you sure?' }, 
                        class: 'w-full bg-red-500 hover:bg-red-700 text-white text-center py-2 px-3 rounded text-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @work_orders.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500">No work orders found.</p>
    </div>
  <% end %>
</div>
