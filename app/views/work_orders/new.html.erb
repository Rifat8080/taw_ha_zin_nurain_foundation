<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New Work Order</h1>
    <div class="flex gap-2">
      <%= link_to 'View All Orders', work_orders_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Teams', volunteers_teams_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back', work_orders_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @work_order, local: true) do |form| %>
      <% if @work_order.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4><%= pluralize(@work_order.errors.count, "error") %> prohibited this work order from being saved:</h4>
          <ul class="list-disc list-inside">
            <% @work_order.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :team_id, 'Team', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :team_id, 
                        options_from_collection_for_select(@teams, :id, :name, params[:team_id]),
                        { prompt: 'Select a team' }, 
                        { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' } %>
      </div>

      <div class="mb-4">
        <%= form.label :title, 'Title', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :title, rows: 2,
                           class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :description, 'Description', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :description, rows: 4,
                           class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :checklist, 'Checklist (one item per line)', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.text_area :checklist, rows: 6,
                           placeholder: "Task 1\nTask 2\nTask 3",
                           class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :assigned_date, 'Assigned Date', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.date_field :assigned_date, 
                            class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :assigned_by, 'Assigned By', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :assigned_by, 
                        options_from_collection_for_select(@users, :id, :full_name),
                        { prompt: 'Select who is assigning this' }, 
                        { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' } %>
      </div>

      <div class="flex items-center justify-end space-x-3">
        <%= form.submit 'Create Work Order', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= link_to 'Cancel', work_orders_path, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
