<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New Volunteer</h1>
    <div class="flex gap-2">
      <%= link_to 'View All Volunteers', volunteers_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Users', users_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back', volunteers_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @volunteer, local: true) do |form| %>
      <% if @volunteer.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4><%= pluralize(@volunteer.errors.count, "error") %> prohibited this volunteer from being saved:</h4>
          <ul class="list-disc list-inside">
            <% @volunteer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :user_id, 'User', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :user_id, 
                        options_from_collection_for_select(@available_users, :id, :full_name, @volunteer.user_id),
                        { prompt: 'Select a user' }, 
                        { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' } %>
      </div>

      <div class="mb-4">
        <%= form.label :joining_date, 'Joining Date', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.date_field :joining_date, 
                            class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :role, 'Volunteer Role', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :role, 
                        volunteer_role_options,
                        { prompt: 'Select a role' }, 
                        { class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' } %>
      </div>

      <div class="flex items-center justify-end space-x-3">
        <%= form.submit 'Create Volunteer', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= link_to 'Cancel', volunteers_path, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
