<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @volunteer.full_name %></h1>
    <div class="flex gap-2">
      <%= link_to 'Edit', edit_volunteer_path(@volunteer), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Assign to Team', new_team_assignment_path(volunteer_id: @volunteer.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Delete', @volunteer, method: :delete, 
                  data: { confirm: 'Are you sure? This will remove all team assignments.' }, 
                  class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back to List', volunteers_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Volunteer Information</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Personal details and volunteer information.</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Full name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteer.full_name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Email address</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteer.email %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Phone number</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteer.phone_number %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Volunteer role</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= volunteer_role_badge(@volunteer.role) %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Joining date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @volunteer.joining_date.strftime('%B %d, %Y') %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">User status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= volunteer_status_badge(@volunteer) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Team Assignments</h2>
      <%= link_to 'Assign to New Team', new_team_assignment_path(volunteer_id: @volunteer.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
    <% if @team_assignments.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @team_assignments.each do |assignment| %>
            <li>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-indigo-600 truncate">
                      <%= link_to assignment.volunteers_team.name, assignment.volunteers_team, class: 'hover:text-indigo-900' %>
                    </p>
                    <div class="mt-2 sm:flex sm:justify-between">
                      <div class="sm:flex">
                        <p class="flex items-center text-sm text-gray-500">
                          Assigned on <%= assignment.created_at.strftime('%B %d, %Y') %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="ml-2 flex-shrink-0 flex items-center space-x-2">
                    <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= assignment.volunteers_team.district %>
                    </p>
                    <%= link_to 'View Team', assignment.volunteers_team, class: 'bg-indigo-500 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs' %>
                    <%= link_to 'Remove', assignment, method: :delete, 
                                data: { confirm: 'Are you sure you want to remove this team assignment?' }, 
                                class: 'bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded text-xs' %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500 mb-4">No team assignments yet.</p>
        <%= link_to 'Assign to First Team', new_team_assignment_path(volunteer_id: @volunteer.id), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>
