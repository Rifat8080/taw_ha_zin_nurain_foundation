<% content_for(:title, "Dashboard - Taw Ha Zin Nurain Foundation") %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Dashboard Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-2">Welcome back, <%= current_user.full_name %>!</p>
  </div>

  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Projects</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:total_projects] %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Donations</dt>
            <dd class="text-3xl font-semibold text-gray-900">৳<%= number_with_delimiter(@stats[:total_donations]) %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Active Volunteers</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:total_volunteers] %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Healthcare Requests</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @stats[:total_healthcare_requests] %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- Healthcare Requests -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Healthcare Requests</h3>
        <%= link_to healthcare_requests_path, class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
          View All →
        <% end %>
      </div>
      
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Pending Approval</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            <%= @stats[:pending_healthcare_requests] %>
          </span>
        </div>
        
        <% if current_user.role == 'admin' %>
          <div class="pt-4 border-t border-gray-200">
            <%= link_to "Review Pending", healthcare_requests_path(status: 'pending'), 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% else %>
          <div class="pt-4 border-t border-gray-200">
            <%= link_to "Create Request", new_healthcare_request_path, 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Events -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Upcoming Events</h3>
        <%= link_to events_path, class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
          View All →
        <% end %>
      </div>
      
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Upcoming</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= @stats[:upcoming_events] %>
          </span>
        </div>
        
        <div class="pt-4 border-t border-gray-200">
          <% if current_user.role == 'admin' %>
            <%= link_to "Create Event", new_event_path, 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
          <% else %>
            <%= link_to "Browse Events", events_path, 
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
      
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Total Events</span>
          <span class="text-sm font-medium text-gray-900"><%= @stats[:total_events] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">My Donations</span>
          <span class="text-sm font-medium text-gray-900">৳<%= number_with_delimiter(current_user.donations.sum(:amount)) %></span>
        </div>
        <% if current_user.is_volunteer? %>
          <div class="flex justify-between">
            <span class="text-sm text-gray-600">My Teams</span>
            <span class="text-sm font-medium text-gray-900"><%= current_user.volunteer_teams.count %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Healthcare Requests -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Recent Healthcare Requests</h3>
      </div>
      <div class="p-6">
        <% if @recent_healthcare_requests.any? %>
          <div class="space-y-4">
            <% @recent_healthcare_requests.each do |request| %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= request.patient_name %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= request.user.full_name %> • <%= time_ago_in_words(request.created_at) %> ago
                  </p>
                </div>
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case request.status
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'approved' then 'bg-green-100 text-green-800'
                        when 'rejected' then 'bg-red-100 text-red-800'
                        when 'completed' then 'bg-blue-100 text-blue-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= request.status.capitalize %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No recent healthcare requests</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Donations -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Recent Donations</h3>
      </div>
      <div class="p-6">
        <% if @recent_donations.any? %>
          <div class="space-y-4">
            <% @recent_donations.each do |donation| %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">
                    ৳<%= number_with_delimiter(donation.amount) %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= donation.user.full_name %> • <%= time_ago_in_words(donation.created_at) %> ago
                  </p>
                </div>
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Received
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No recent donations</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
