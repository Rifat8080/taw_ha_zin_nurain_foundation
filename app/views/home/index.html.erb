<% content_for :title, "Welcome to Taw Ha Zin Nurain Foundation" %>

<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Taw Ha Zin Nurain Foundation
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
        Building stronger communities through healthcare assistance, education, and charitable initiatives.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Get Healthcare Help", healthcare_requests_path, 
            class: "inline-flex items-center px-8 py-3 border border-transparent text-lg font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 transition duration-300" %>
        <%= link_to "View Events", events_path, 
            class: "inline-flex items-center px-8 py-3 border-2 border-white text-lg font-medium rounded-md text-white hover:bg-white hover:text-blue-600 transition duration-300" %>
      </div>
    </div>
  </div>
</div>

<!-- Quick Stats -->
<div class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="text-center">
        <div class="text-4xl font-bold text-blue-600 mb-2"><%= @projects.count %></div>
        <div class="text-gray-600">Active Projects</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-green-600 mb-2"><%= @healthcare_requests.count %></div>
        <div class="text-gray-600">People Helped</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-purple-600 mb-2"><%= @upcoming_events.count %></div>
        <div class="text-gray-600">Upcoming Events</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-red-600 mb-2">100+</div>
        <div class="text-gray-600">Volunteers</div>
      </div>
    </div>
  </div>
</div>

<!-- Healthcare Assistance Section -->
<div class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Healthcare <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Assistance</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        We provide healthcare assistance to those in need. Browse current requests and make a difference.
      </p>
    </div>

    <% if @healthcare_requests.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        <% @healthcare_requests.each do |request| %>
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900"><%= request.patient_name %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <%= request.status.capitalize %>
              </span>
            </div>
            
            <p class="text-gray-600 mb-4 line-clamp-3"><%= request.reason %></p>
            
            <div class="bg-gray-50 rounded-lg p-3 mb-4">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Donations Received:</span>
                <span class="font-semibold text-green-600">à§³<%= number_with_delimiter(request.total_donations) %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Donors:</span>
                <span class="font-semibold"><%= request.donation_count %></span>
              </div>
            </div>
            
            <div class="flex gap-2">
              <%= link_to "View Details", healthcare_request_path(request), 
                  class: "flex-1 text-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
              <% if request.can_receive_donations? %>
                <%= link_to "Donate", new_healthcare_request_healthcare_donation_path(request), 
                    class: "flex-1 text-center px-3 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-green-600 hover:bg-green-700" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center">
        <%= link_to "View All Healthcare Requests", healthcare_requests_path, 
            class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No active healthcare requests at the moment.</p>
        <%= link_to "Create a Request", new_healthcare_request_path, 
            class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Projects Section -->
<div class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Projects</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover the meaningful initiatives we're working on to strengthen our community and create lasting impact.
      </p>
    </div>

    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        <% @projects.each do |project| %>
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= project.name %></h3>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= project.description %></p>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">
                <%= project.created_at.strftime("%B %Y") %>
              </span>
              <%= link_to "Learn More", project_path(project), 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center">
        <%= link_to "View All Projects", projects_path, 
            class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-md text-base font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No projects available at the moment.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Events Section -->
<div class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Upcoming <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Events</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Join us in our community events and make meaningful connections while supporting our causes.
      </p>
    </div>

    <% if @upcoming_events.any? %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <% @upcoming_events.each do |event| %>
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow">
            <div class="text-sm text-blue-600 font-medium mb-2">
              <%= event.start_date.strftime("%B %d, %Y") %>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= event.name %></h3>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= event.guest_description %></p>
            
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">
                <%= event.seat_number %> max attendees
              </span>
              <%= link_to "View Event", event_path(event), 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center">
        <%= link_to "View All Events", events_path, 
            class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-md text-base font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500">No upcoming events at the moment.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Call to Action -->
<div class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
      Ready to Make a Difference?
    </h2>
    <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
      Join our community of volunteers and donors working together to create positive change.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Become a Volunteer", new_user_registration_path, 
          class: "inline-flex items-center px-8 py-3 border border-transparent text-lg font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 transition duration-300" %>
      <%= link_to "Request Healthcare Help", new_healthcare_request_path, 
          class: "inline-flex items-center px-8 py-3 border-2 border-white text-lg font-medium rounded-md text-white hover:bg-white hover:text-blue-600 transition duration-300" %>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">What We Offer</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Join our community and participate in meaningful events and volunteer opportunities.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Event Management</h3>
        <p class="text-gray-600">Digital tickets with QR codes for seamless event check-ins and management.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.121M9 20h8v-2a3 3 0 00-5.196-2.121m1.196 2.121A6.002 6.002 0 003 15a6.002 6.002 0 006 7.28M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Volunteer Programs</h3>
        <p class="text-gray-600">Connect with volunteer opportunities and make a difference in your community.</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Community Impact</h3>
        <p class="text-gray-600">Track donations, expenses, and the positive impact we're making together.</p>
      </div>
    </div>
  </div>
</div>

