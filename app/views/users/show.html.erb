<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">User Details</h1>
    <div>
      <%= link_to 'Edit', edit_user_path(@user), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Back', users_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">First Name:</strong>
      <p class="text-gray-700 text-base"><%= @user.first_name %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Last Name:</strong>
      <p class="text-gray-700 text-base"><%= @user.last_name %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Email:</strong>
      <p class="text-gray-700 text-base"><%= @user.email %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Phone Number:</strong>
      <p class="text-gray-700 text-base"><%= @user.phone_number %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Role:</strong>
      <p class="text-gray-700 text-base"><%= @user.role %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-700 text-sm font-bold mb-2">Address:</strong>
      <p class="text-gray-700 text-base"><%= @user.address %></p>
    </div>
  </div>
</div>