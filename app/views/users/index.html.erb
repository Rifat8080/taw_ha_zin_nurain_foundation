<div class="container mx-auto px-4">
  <div class="flex justify-between items-center mb-4">
    <div>
      <h1 class="text-2xl font-bold">Users Management</h1>
      <p class="text-gray-600 text-sm mt-1">Manage admin and member users. <%= link_to "Volunteers are managed separately", volunteers_path, class: "text-blue-600 hover:underline" %>.</p>
    </div>
    <div class="text-right">
      <p class="text-gray-600">Users can register via the <%= link_to "sign up page", new_user_registration_path, class: "text-blue-600 hover:underline" %></p>
      <div class="mt-2">
        <%= link_to volunteers_path, class: "inline-flex items-center px-3 py-1.5 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-md transition duration-200" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.121M9 20h8v-2a3 3 0 00-5.196-2.121m1.196 2.121A6.002 6.002 0 003 15a6.002 6.002 0 006 7.28M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Manage Volunteers
        <% end %>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b">First Name</th>
          <th class="py-2 px-4 border-b">Last Name</th>
          <th class="py-2 px-4 border-b">Email</th>
          <th class="py-2 px-4 border-b">Role</th>
          <th class="py-2 px-4 border-b"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="py-2 px-4 border-b"><%= user.first_name %></td>
            <td class="py-2 px-4 border-b"><%= user.last_name %></td>
            <td class="py-2 px-4 border-b"><%= user.email %></td>
            <td class="py-2 px-4 border-b"><%= user.role %></td>
            <td class="py-2 px-4 border-b">
              <%= link_to 'Show', user, class: "text-blue-500 hover:underline" %>
              <%= link_to 'Edit', edit_user_path(user), class: "text-blue-500 hover:underline ml-2" %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline ml-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>