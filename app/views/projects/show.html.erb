<% content_for :title, "Showing project" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing project</h1>

  <%= render @project %>

  <!-- Project Status and Donation Action -->
  <div class="mt-6 p-4 rounded-lg <%= @project.active? ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200' %>">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <div class="w-3 h-3 <%= @project.active? ? 'bg-green-400' : 'bg-red-400' %> rounded-full mr-2"></div>
        <span class="font-medium <%= @project.active? ? 'text-green-800' : 'text-red-800' %>">
          <%= @project.status_text %> Project
        </span>
      </div>
      <% if @project.active? %>
        <%= link_to new_donation_path(project_id: @project.id), 
            class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
          Donate Now
        <% end %>
      <% else %>
        <span class="text-red-600 font-medium">Not accepting donations</span>
      <% end %>
    </div>
  </div>

  <!-- Donations Section -->
  <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h2 class="text-2xl font-bold text-gray-900">Donations</h2>
      <div class="mt-2">
        <p class="text-lg font-semibold text-green-600">Total Raised: $<%= @total_donations %></p>
        <p class="text-sm text-gray-600"><%= @donations.count %> donation(s)</p>
      </div>
    </div>
    
    <% if @donations.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donor</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @donations.order(created_at: :desc).each do |donation| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">$<%= donation.amount %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= donation.user.first_name %> <%= donation.user.last_name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= donation.created_at.strftime("%B %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <p class="text-gray-500">No donations yet for this project.</p>
        <% if @project.active? %>
          <%= link_to "Make the first donation", new_donation_path(project_id: @project.id), class: "mt-2 text-blue-500 hover:text-blue-700 font-medium" %>
        <% else %>
          <p class="mt-2 text-red-500 font-medium">This project is not currently accepting donations.</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Expenses Section -->
  <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h2 class="text-2xl font-bold text-gray-900">Expenses</h2>
      <div class="mt-2">
        <p class="text-lg font-semibold text-red-600">Total Spent: $<%= @total_expenses %></p>
        <p class="text-sm text-gray-600"><%= @expenses.count %> expense(s)</p>
      </div>
    </div>
    
    <% if @expenses.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @expenses.order(date: :desc).each do |expense| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= expense.title %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-red-600">$<%= expense.amount %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= expense.date.strftime("%B %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <p class="text-gray-500">No expenses yet for this project.</p>
        <%= link_to "Add the first expense", new_expense_path(project_id: @project.id), class: "mt-2 text-blue-500 hover:text-blue-700 font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Financial Summary -->
  <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h2 class="text-2xl font-bold text-gray-900">Financial Summary</h2>
    </div>
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="text-center">
          <p class="text-sm text-gray-600">Total Donations</p>
          <p class="text-2xl font-bold text-green-600">$<%= @total_donations %></p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-600">Total Expenses</p>
          <p class="text-2xl font-bold text-red-600">$<%= @total_expenses %></p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-600">Net Balance</p>
          <% net_balance = @total_donations - @total_expenses %>
          <p class="text-2xl font-bold <%= net_balance >= 0 ? 'text-green-600' : 'text-red-600' %>">
            $<%= net_balance %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "Edit this project", edit_project_path(@project), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to projects", projects_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this project", @project, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
