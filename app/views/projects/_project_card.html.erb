<!-- Project card partial for index/grid views -->
<div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-blue-200 group">
  <!-- Project Card Header -->
  <div class="bg-gradient-to-r <%= project.active? ? 'from-gray-50 to-blue-50' : 'from-gray-50 to-red-50' %> px-6 py-4 border-b border-gray-100">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 <%= project.active? ? 'bg-green-400 animate-pulse' : 'bg-red-400' %> rounded-full"></div>
        <span class="text-sm font-medium text-gray-500 uppercase tracking-wider">
          <%= project.active? ? 'Active Project' : 'Inactive Project' %>
        </span>
      </div>
      <div class="text-xs text-gray-400 bg-white px-2 py-1 rounded-full">
        #<%= project.id.to_s.first(8) %>
      </div>
    </div>
  </div>

  <!-- Project Image -->
  <% if project.image.attached? %>
    <div class="aspect-w-16 aspect-h-9">
      <%= image_tag project.image, class: "w-full h-48 object-cover" %>
    </div>
  <% end %>

  <!-- Project Content -->
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= project.name %></h3>
    <% if project.categories.present? %>
      <p class="text-sm text-blue-600 mb-2"><%= project.categories %></p>
    <% end %>
    <p class="text-gray-600 mb-4 line-clamp-3"><%= project.description %></p>
  </div>

  <!-- Action Buttons -->
  <div class="px-6 pb-6">
    <div class="flex flex-col sm:flex-row gap-2">
      <%= link_to project, class: "flex-1 text-center px-4 py-2 bg-blue-50 hover:bg-blue-100 text-blue-700 font-medium rounded-lg transition-colors duration-200 group-hover:bg-blue-100" do %>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View
      <% end %>
      <% if project.active? %>
        <%= link_to new_donation_path(project_id: project.id), class: "flex-1 text-center px-4 py-2 bg-green-50 hover:bg-green-100 text-green-700 font-medium rounded-lg transition-colors duration-200" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
          Donate
        <% end %>
      <% else %>
        <div class="flex-1 text-center px-4 py-2 bg-gray-100 text-gray-500 font-medium rounded-lg cursor-not-allowed">
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
          </svg>
          Inactive
        </div>
      <% end %>
      <%= link_to edit_project_path(project), class: "flex-1 text-center px-4 py-2 bg-gray-50 hover:bg-gray-100 text-gray-700 font-medium rounded-lg transition-colors duration-200" do %>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
    </div>
    <div class="mt-2">
      <%= button_to project, method: :delete, class: "w-full px-4 py-2 bg-red-50 hover:bg-red-100 text-red-700 font-medium rounded-lg transition-colors duration-200 border border-red-200 hover:border-red-300", data: { turbo_confirm: "Are you sure you want to delete this project? This action cannot be undone." } do %>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Project
      <% end %>
    </div>
  </div>
</div>
