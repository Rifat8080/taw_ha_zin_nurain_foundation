<!-- Modern Project Card Partial -->
<div class="relative bg-white rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-foundationprimarygreen/40 group overflow-hidden flex flex-col">
  <!-- Status Ribbon -->
  <div class="absolute top-4 left-0 z-20 px-4 py-1 rounded-r-2xl text-xs font-bold tracking-wider shadow-md
    <%= project.active? ? 'bg-foundationprimarygreen text-white' : 'bg-red-400 text-white' %>">
    <%= project.active? ? 'Active' : 'Inactive' %>
  </div>

  <!-- Project Image -->
  <div class="relative w-full aspect-[16/9] bg-gray-100 flex items-center justify-center overflow-hidden">
    <% if project.image.attached? %>
      <%= image_tag project.image, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-300 text-6xl">
        <i class="fas fa-image"></i>
      </div>
    <% end %>
    <% if project.categories.present? %>
      <div class="absolute bottom-2 left-2 bg-white/80 text-foundationprimarygreen text-xs font-semibold px-3 py-1 rounded-full shadow">
        <%= project.categories %>
      </div>
    <% end %>
  </div>

  <!-- Project Content -->
  <div class="flex-1 flex flex-col p-6 gap-2">
    <h3 class="text-2xl font-bold text-gray-900 mb-1 group-hover:text-foundationprimarygreen transition-colors"><%= project.name %></h3>
    <p class="text-gray-600 mb-2 line-clamp-3 text-base"><%= project.description %></p>
    <div class="flex flex-wrap gap-2 mt-auto">
        <%= link_to project, class: "flex-1 min-w-[120px] text-center px-4 py-2 bg-foundationprimarygreen text-white font-semibold rounded-lg transition-all duration-200 shadow-sm scale-100 focus:outline-none focus:ring-2 focus:ring-foundationprimarygreen/50 hover:bg-foundationprimarygreen/90 hover:text-white hover:scale-105 hover:shadow-xl" do %>
        <i class="fas fa-eye mr-1"></i> View
      <% end %>
      <% if project.active? %>
          <%= link_to new_donation_path(project_id: project.id), class: "flex-1 min-w-[120px] text-center px-4 py-2 bg-forange text-white font-semibold rounded-lg transition-all duration-200 shadow-sm scale-100 focus:outline-none focus:ring-2 focus:ring-forange/50 hover:bg-forange/90 hover:text-white hover:scale-105 hover:shadow-xl" do %>
          <i class="fas fa-donate mr-1"></i> Donate
        <% end %>
      <% else %>
        <div class="flex-1 min-w-[120px] text-center px-4 py-2 bg-gray-100 text-gray-400 font-semibold rounded-lg cursor-not-allowed">
          <i class="fas fa-ban mr-1"></i> Inactive
        </div>
      <% end %>
      <% if current_user&.admin? %>
          <%= link_to edit_project_path(project), class: "flex-1 min-w-[120px] text-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg transition-all duration-200 shadow-sm scale-100 focus:outline-none focus:ring-2 focus:ring-blue-400/50 hover:bg-blue-700 hover:text-white hover:scale-105 hover:shadow-xl" do %>
          <i class="fas fa-edit mr-1"></i> Edit
        <% end %>
      <% end %>
    </div>
    <% if current_user&.admin? %>
      <div class="mt-2">
    <%= button_to project, method: :delete, class: "w-full px-4 py-2 bg-red-600 text-white font-semibold rounded-lg transition-all duration-200 border border-red-600 shadow-sm scale-100 focus:outline-none focus:ring-2 focus:ring-red-400/50 hover:bg-red-700 hover:text-white hover:scale-105 hover:shadow-xl", data: { turbo_confirm: "Are you sure you want to delete this project? This action cannot be undone." } do %>
          <i class="fas fa-trash mr-1"></i> Delete Project
        <% end %>
      </div>
    <% end %>
  </div>
</div>
