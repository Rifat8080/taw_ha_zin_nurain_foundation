<% content_for :title, "Projects" %>
<div class="container mx-auto px-4 py-8">
  <!-- Success Notice -->
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-forange/10 border-l-4 border-forange rounded-r-lg shadow-sm flex items-center" id="notice">
      <svg class="h-5 w-5 text-forange mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span class="text-forange font-medium"><%= notice %></span>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-center text-center mb-8 gap-4">
    <div class="w-full">
      <h1 class="text-4xl md:text-5xl font-bold text-foundationprimarygreen tracking-tight text-center">
        <% if @filter_category %>
          <span class="text-forange"><%= @filter_category %></span> Projects
        <% else %>
          Our <span class="text-forange">Projects</span>
        <% end %>
      </h1>
  <p class="mt-2 text-lg text-gray-700 text-center">
        <% if @filter_category %>
          Projects focused on <span class="text-forange"><%= @filter_category.downcase %></span> initiatives
        <% else %>
          Empowering communities through <span class="text-forange">meaningful initiatives</span>
        <% end %>
      </p>
      <% if @filter_category %>
  <div class="mt-3 flex items-center justify-center space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-forange/10 text-forange border border-forange">
            <svg class="w-4 h-4 mr-1 text-forange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            <%= @filter_category %>
          </span>
          <%= link_to projects_path, class: "inline-flex items-center px-2 py-1 text-sm text-gray-600 hover:text-forange transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Clear filter
          <% end %>
        </div>
      <% end %>
    </div>
   
  </div>

  <!-- Search and Filter Section -->
  <div class="mb-8 bg-white rounded-lg shadow border border-foundationprimarygreen/20 p-6">
    <%= form_with url: projects_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4" do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, placeholder: "Search projects by name, description, or category...", 
            value: params[:search],
            class: "w-full px-4 py-3 border border-foundationprimarygreen/30 rounded-lg focus:ring-2 focus:ring-forange focus:border-forange text-gray-900 placeholder-gray-500" %>
      </div>
      <div class="flex gap-2">
  <%= form.submit "Search", class: "px-6 py-3 bg-forange hover:bg-foundationprimarygreen text-white font-semibold rounded-lg transition-all duration-200 transform will-change-transform hover:scale-105 hover:shadow-xl" %>
        <% if params[:search].present? || @filter_category %>
          <%= link_to "Clear", projects_path, class: "px-6 py-3 bg-gray-200 hover:bg-forange  hover:text-white text-gray-700 font-semibold rounded-lg transition-colors" %>
        <% end %>
      </div>
      <% if @filter_category %>
        <%= form.hidden_field "filter[categories]", value: @filter_category %>
      <% end %>
    <% end %>
    <div class="mt-4 flex flex-wrap gap-2">
      <span class="text-sm font-medium text-gray-600 mr-2">Popular categories:</span>
      <% %w[Palestine Orphan Healthcare Education Emergency].each do |category| %>
        <%= link_to projects_path(filter: { categories: category }), 
            class: "inline-flex items-center px-3 py-1 rounded-full text-sm #{ @filter_category == category ? 'bg-forange/10 text-forange border border-forange' : 'bg-gray-100 text-gray-700 hover:bg-forange/10 hover:text-forange border border-transparent'} transition-colors" do %>
          <%= category %>
        <% end %>
      <% end %>
    </div>
  </div>
 <% if current_user&.role == "admin" %>
      <div class="flex gap-3  mb-10 w-full md:w-auto ">
      
  <%= link_to new_project_path, class: "w-full md:w-auto inline-flex items-center whitespace-nowrap px-6 py-3 bg-foundationprimarygreen hover:bg-forange text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
          <i class="fa-solid fa-plus mr-2" aria-hidden="true"></i>
          New Project
        <% end %>
        
      </div>
    <% end %>
  <!-- Projects Grid -->
  <div id="projects" class="relative z-10">
    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @projects.each do |project| %>
          <%= render 'project_card', project: project %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
