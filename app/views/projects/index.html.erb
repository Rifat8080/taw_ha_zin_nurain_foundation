<% content_for :title, "Projects" %>

<div class="container mx-auto px-4 py-8 relative">
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 -mt-8 -mr-8 w-32 h-32 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 opacity-10"></div>
  <div class="absolute bottom-0 left-0 -mb-8 -ml-8 w-24 h-24 rounded-full bg-gradient-to-tr from-green-400 to-blue-500 opacity-15"></div>

  <!-- Success Notice -->
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 border-l-4 border-green-400 rounded-r-lg shadow-sm" id="notice">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-green-700 font-medium"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 relative z-10">
    <div class="mb-4 md:mb-0">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tight">
        <% if @filter_category %>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600"><%= @filter_category %></span> Projects
        <% else %>
          Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Projects</span>
        <% end %>
      </h1>
      <p class="mt-2 text-lg text-gray-600">
        <% if @filter_category %>
          Projects focused on <%= @filter_category.downcase %> initiatives
        <% else %>
          Empowering communities through meaningful initiatives
        <% end %>
      </p>
      
      <!-- Category Filter Badge -->
      <% if @filter_category %>
        <div class="mt-3 flex items-center space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            <%= @filter_category %>
          </span>
          <%= link_to projects_path, class: "inline-flex items-center px-2 py-1 text-sm text-gray-600 hover:text-gray-800 transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Clear filter
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="flex gap-3">
      <%= link_to new_project_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        New Project
      <% end %>
    </div>
  </div>

  <!-- Search and Filter Section -->
  <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with url: projects_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4" do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, placeholder: "Search projects by name, description, or category...", 
            value: params[:search],
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 placeholder-gray-500" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Search", class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors" %>
        <% if params[:search].present? || @filter_category %>
          <%= link_to "Clear", projects_path, class: "px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-lg transition-colors" %>
        <% end %>
      </div>
      <!-- Preserve filter params -->
      <% if @filter_category %>
        <%= form.hidden_field "filter[categories]", value: @filter_category %>
      <% end %>
    <% end %>

    <!-- Popular Categories -->
    <div class="mt-4 flex flex-wrap gap-2">
      <span class="text-sm font-medium text-gray-600 mr-2">Popular categories:</span>
      <% %w[Palestine Orphan Healthcare Education Emergency].each do |category| %>
        <%= link_to projects_path(filter: { categories: category }), 
            class: "inline-flex items-center px-3 py-1 rounded-full text-sm #{@filter_category == category ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition-colors" do %>
          <%= category %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Projects Grid -->
  <div id="projects" class="relative z-10">
    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @projects.each do |project| %>
          <%= render 'project_card', project: project %>
        <% end %>
      </div>

      <!-- Projects Stats -->
      <div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-center space-x-4">
            <div class="bg-blue-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Total Projects</h3>
              <div class="text-3xl font-bold text-blue-600"><%= @projects.count %></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="bg-green-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Active Projects</h3>
              <div class="text-3xl font-bold text-green-600"><%= @projects.select(&:active?).count %></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="bg-gray-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Inactive Projects</h3>
              <div class="text-3xl font-bold text-gray-600"><%= @projects.select { |p| !p.active? }.count %></div>
            </div>
          </div>
        </div>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No projects yet</h3>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">
          Start making a difference by creating your first project. Every great initiative begins with a single step.
        </p>
        <%= link_to new_project_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Create Your First Project
        <% end %>
      </div>
    <% end %>
  </div>
</div>
