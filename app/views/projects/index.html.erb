<% content_for :title, "Projects" %>

<div class="container mx-auto px-4 py-8 relative">
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 -mt-8 -mr-8 w-32 h-32 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 opacity-10"></div>
  <div class="absolute bottom-0 left-0 -mb-8 -ml-8 w-24 h-24 rounded-full bg-gradient-to-tr from-green-400 to-blue-500 opacity-15"></div>

  <!-- Success Notice -->
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 border-l-4 border-green-400 rounded-r-lg shadow-sm" id="notice">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-green-700 font-medium"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 relative z-10">
    <div class="mb-4 md:mb-0">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 tracking-tight">
        Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Projects</span>
      </h1>
      <p class="mt-2 text-lg text-gray-600">Empowering communities through meaningful initiatives</p>
    </div>
    <div class="flex gap-3">
      <%= link_to new_project_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        New Project
      <% end %>
    </div>
  </div>

  <!-- Projects Grid -->
  <div id="projects" class="relative z-10">
    <% if @projects.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @projects.each do |project| %>
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-blue-200 group">
            <!-- Project Card Header -->
            <div class="bg-gradient-to-r <%= project.active? ? 'from-gray-50 to-blue-50' : 'from-gray-50 to-red-50' %> px-6 py-4 border-b border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-3 h-3 <%= project.active? ? 'bg-green-400 animate-pulse' : 'bg-red-400' %> rounded-full"></div>
                  <span class="text-sm font-medium text-gray-500 uppercase tracking-wider">
                    <%= project.active? ? 'Active Project' : 'Inactive Project' %>
                  </span>
                </div>
                <div class="text-xs text-gray-400 bg-white px-2 py-1 rounded-full">
                  #<%= project.id.to_s.first(8) %>
                </div>
              </div>
            </div>

            <!-- Project Content -->
            <div class="p-6">
              <% if project.image.attached? %>
                <div class="mb-4">
                  <%= image_tag project.image, class: "w-full h-48 object-cover rounded-lg" %>
                </div>
              <% end %>
              <%= render project %>
            </div>

            <!-- Action Buttons -->
            <div class="px-6 pb-6">
              <div class="flex flex-col sm:flex-row gap-2">
                <%= link_to project, class: "flex-1 text-center px-4 py-2 bg-blue-50 hover:bg-blue-100 text-blue-700 font-medium rounded-lg transition-colors duration-200 group-hover:bg-blue-100" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View
                <% end %>
                <% if project.active? %>
                  <%= link_to new_donation_path(project_id: project.id), class: "flex-1 text-center px-4 py-2 bg-green-50 hover:bg-green-100 text-green-700 font-medium rounded-lg transition-colors duration-200" do %>
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                    Donate
                  <% end %>
                <% else %>
                  <div class="flex-1 text-center px-4 py-2 bg-gray-100 text-gray-500 font-medium rounded-lg cursor-not-allowed">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
                    </svg>
                    Inactive
                  </div>
                <% end %>
                <%= link_to edit_project_path(project), class: "flex-1 text-center px-4 py-2 bg-gray-50 hover:bg-gray-100 text-gray-700 font-medium rounded-lg transition-colors duration-200" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Edit
                <% end %>
              </div>
              <div class="mt-2">
                <%= button_to project, method: :delete, class: "w-full px-4 py-2 bg-red-50 hover:bg-red-100 text-red-700 font-medium rounded-lg transition-colors duration-200 border border-red-200 hover:border-red-300", data: { turbo_confirm: "Are you sure you want to delete this project? This action cannot be undone." } do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  Delete Project
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Projects Stats -->
      <div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex items-center space-x-4">
            <div class="bg-blue-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Total Projects</h3>
              <div class="text-3xl font-bold text-blue-600"><%= @projects.count %></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="bg-green-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Active Projects</h3>
              <div class="text-3xl font-bold text-green-600"><%= @projects.select(&:active?).count %></div>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="bg-gray-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Inactive Projects</h3>
              <div class="text-3xl font-bold text-gray-600"><%= @projects.select { |p| !p.active? }.count %></div>
            </div>
          </div>
        </div>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No projects yet</h3>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">
          Start making a difference by creating your first project. Every great initiative begins with a single step.
        </p>
        <%= link_to new_project_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Create Your First Project
        <% end %>
      </div>
    <% end %>
  </div>
</div>
