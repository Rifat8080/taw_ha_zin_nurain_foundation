<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <% if project.image.attached? %>
    <div>
      <strong class="block font-medium mb-1">Image:</strong>
      <%= image_tag project.image, class: "w-full h-64 object-cover rounded-lg shadow-md" %>
    </div>
  <% end %>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= project.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Categories:</strong>
    <%= project.categories %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= project.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= project.status_text %>
    </span>
  </div>
</div>
