<<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Donations</h1>
    <%= link_to "New Donation", new_donation_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Donor</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Project</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @donations.each do |donation| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">$<%= donation.amount %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= donation.user.first_name %> <%= donation.user.last_name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= donation.project.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= donation.created_at.strftime("%B %d, %Y") %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View", donation_path(donation), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
              <%= link_to "Edit", edit_donation_path(donation), class: "text-yellow-600 hover:text-yellow-900 mr-2" %>
              <%= link_to "Delete", donation_path(donation), method: :delete, 
                          confirm: "Are you sure?", 
                          class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @donations.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No donations found.</p>
        <%= link_to "Create the first donation", new_donation_path, class: "text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>
</div>v>
