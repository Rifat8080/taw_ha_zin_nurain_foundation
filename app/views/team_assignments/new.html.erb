<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">New Team Assignment</h1>
      <% if @team_assignment.volunteer_id.present? %>
        <% volunteer = @volunteers.find { |v| v.id == @team_assignment.volunteer_id } %>
        <% if volunteer %>
          <p class="text-sm text-blue-600 mt-1">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Assigning team to: <strong><%= volunteer.full_name %></strong>
          </p>
        <% end %>
      <% end %>
    </div>
    <div class="flex gap-2">
      <%= link_to 'View All Assignments', team_assignments_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Volunteers', volunteers_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Teams', volunteers_teams_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'Back', team_assignments_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @team_assignment, local: true) do |form| %>
      <% if @team_assignment.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4><%= pluralize(@team_assignment.errors.count, "error") %> prohibited this assignment from being saved:</h4>
          <ul class="list-disc list-inside">
            <% @team_assignment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :volunteer_id, 'Volunteer *', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :volunteer_id, 
                        options_from_collection_for_select(@volunteers, :id, :full_name, @team_assignment.volunteer_id),
                        { prompt: 'Select a volunteer' }, 
                        { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 #{'border-red-500' if @team_assignment.errors[:volunteer_id].any?}", required: true } %>
        <% if @team_assignment.errors[:volunteer_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @team_assignment.errors[:volunteer_id].first %></p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= form.label :team_id, 'Team *', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :team_id, 
                        options_from_collection_for_select(@teams, :id, :name, @team_assignment.team_id),
                        { prompt: 'Select a team' }, 
                        { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 #{'border-red-500' if @team_assignment.errors[:team_id].any?}", required: true } %>
        <% if @team_assignment.errors[:team_id].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @team_assignment.errors[:team_id].first %></p>
        <% end %>
      </div>

      <div class="flex items-center justify-end space-x-3">
        <%= form.submit 'Create Assignment', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= link_to 'Cancel', team_assignments_path, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
