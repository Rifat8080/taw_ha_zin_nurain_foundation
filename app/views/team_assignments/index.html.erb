<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Team Assignments</h1>
    <div class="flex gap-2">
      <%= link_to 'New Assignment', new_team_assignment_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Volunteers', volunteers_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
      <%= link_to 'All Teams', volunteers_teams_path, class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>

  <div class="mb-4 flex gap-4 items-center">
    <%= form_with url: team_assignments_path, method: :get, local: true, class: 'flex gap-4 items-center' do |form| %>
      <%= form.select :volunteer_id, 
                      options_from_collection_for_select(Volunteer.includes(:user), :id, :full_name, params[:volunteer_id]),
                      { prompt: 'Filter by Volunteer' }, 
                      { class: 'border border-gray-300 rounded px-3 py-2' } %>
      <%= form.select :team_id, 
                      options_from_collection_for_select(VolunteersTeam.all, :id, :name, params[:team_id]),
                      { prompt: 'Filter by Team' }, 
                      { class: 'border border-gray-300 rounded px-3 py-2' } %>
      <%= form.submit 'Filter', class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      <% if params[:volunteer_id].present? || params[:team_id].present? %>
        <%= link_to 'Clear Filters', team_assignments_path, class: 'bg-red-400 hover:bg-red-600 text-white font-bold py-2 px-4 rounded' %>
      <% end %>
    <% end %>
    
    <div class="ml-auto text-sm text-gray-600">
      Total: <%= @team_assignments.count %> assignments
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Volunteer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Team</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">District</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-red divide-y divide-gray-200">
        <% @team_assignments.each do |assignment| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to assignment.volunteer_name, assignment.volunteer, class: 'text-indigo-600 hover:text-indigo-900' %>
                </div>
                <div class="text-sm text-gray-500"><%= assignment.volunteer.email %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to assignment.team_name, assignment.volunteers_team, class: 'text-indigo-600 hover:text-indigo-900' %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= assignment.team_district %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= assignment.created_at.strftime('%B %d, %Y') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to 'View Volunteer', assignment.volunteer, class: 'bg-indigo-500 hover:bg-indigo-700 text-white px-3 py-1 rounded text-xs' %>
                <%= link_to 'View Team', assignment.volunteers_team, class: 'bg-purple-500 hover:bg-purple-700 text-white px-3 py-1 rounded text-xs' %>
                <%= link_to 'Remove', assignment, method: :delete, 
                            data: { confirm: 'Are you sure you want to remove this assignment?' }, 
                            class: 'bg-red-500 hover:bg-red-700 text-white px-3 py-1 rounded text-xs' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @team_assignments.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500 mb-4">No team assignments found.</p>
      <%= link_to 'Create First Assignment', new_team_assignment_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>
