<!-- Information Modal for New Donors -->
<div id="donor-info-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">Account Created Successfully!</h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500">
          We've created an account for you and sent login details to your email. 
          You can now use these credentials to:
        </p>
        <ul class="text-sm text-gray-500 text-left mt-3 space-y-1">
          <li>• Track your donation history</li>
          <li>• Register for events</li>
          <li>• Update your profile</li>
          <li>• Stay connected with our community</li>
        </ul>
        <p class="text-xs text-blue-600 mt-3">
          <strong>Tip:</strong> Use "Forgot Password" if you can't find the email
        </p>
      </div>
      <div class="items-center px-4 py-3">
        <button onclick="hideDonorInfoModal()" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300">
          Got it!
        </button>
      </div>
    </div>
  </div>
</div>

<% if flash[:notice]&.include?("check your email") %>
  <script>
    document.body.dataset.showDonorModal = 'true';
  </script>
<% end %>
