<% content_for :title, t('layouts.public.contact.title') %>

<section class="bg-white py-20 min-h-[60vh]">
  <div class="max-w-2xl mx-auto px-4">
    <div class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-foundationprimarygreen mb-4 flex items-center justify-center gap-2">
        <i class="fas fa-envelope text-forange"></i>
        <%= t('layouts.public.contact.heading') %>
      </h1>
      <p class="text-lg text-gray-700 max-w-xl mx-auto"><%= t('layouts.public.contact.intro') %></p>
    </div>
    <div class="bg-gray-50 rounded-2xl shadow-lg p-8">
      <form action="#" method="post" class="space-y-6">
        <div class="flex flex-col gap-1">
          <label for="name" class="block text-sm font-semibold text-foundationprimarygreen"><i class="fas fa-user mr-1"></i> <%= t('layouts.public.contact.name') %></label>
          <input type="text" id="name" name="name" class="mt-1 block w-full rounded-lg border-2 border-gray-200 focus:border-forange focus:ring-forange shadow-sm px-4 py-2 transition" required>
        </div>
        <div class="flex flex-col gap-1">
          <label for="email" class="block text-sm font-semibold text-foundationprimarygreen"><i class="fas fa-envelope mr-1"></i> <%= t('layouts.public.contact.email_label') %></label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-lg border-2 border-gray-200 focus:border-forange focus:ring-forange shadow-sm px-4 py-2 transition" required>
        </div>
        <div class="flex flex-col gap-1">
          <label for="message" class="block text-sm font-semibold text-foundationprimarygreen"><i class="fas fa-comment-dots mr-1"></i> <%= t('layouts.public.contact.message_label') %></label>
          <textarea id="message" name="message" rows="5" class="mt-1 block w-full rounded-lg border-2 border-gray-200 focus:border-forange focus:ring-forange shadow-sm px-4 py-2 transition" required></textarea>
        </div>
        <div>
          <button type="submit" class="w-full py-3 px-6 rounded-lg bg-forange text-white font-bold hover:bg-forange/90 shadow-lg transition flex items-center justify-center gap-2">
            <i class="fas fa-paper-plane"></i>
            <%= t('layouts.public.contact.send_message') %>
          </button>
        </div>
      </form>
      <div class="mt-10 text-center text-gray-700 space-y-2">
        <div class="flex items-center justify-center gap-2">
          <i class="fas fa-envelope text-forange"></i>
          <span><%= t('layouts.public.contact.email_label') %>:</span>
          <a href="mailto:info@tawhazinnurain.org" class="text-forange hover:underline font-semibold">info@tawhazinnurain.org</a>
        </div>
        <div class="flex items-center justify-center gap-2">
          <i class="fas fa-phone text-forange"></i>
          <span><%= t('layouts.public.contact.phone_label') %>:</span>
          <a href="tel:+880123456789" class="text-forange hover:underline font-semibold">+880 1234-56789</a>
        </div>
        <div class="flex items-center justify-center gap-2">
          <i class="fas fa-map-marker-alt text-forange"></i>
          <span><%= t('layouts.public.contact.address_label') %>:</span>
          <span class="font-semibold">123 Main Street, Dhaka, Bangladesh</span>
        </div>
      </div>
    </div>
  </div>
</section>
