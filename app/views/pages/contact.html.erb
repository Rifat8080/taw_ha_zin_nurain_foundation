<% content_for :title, t('layouts.public.contact.title') %>

<section class="bg-white py-20 min-h-[60vh]">
  <div class="max-w-2xl mx-auto px-4">
    <div class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-foundationprimarygreen mb-4"><%= t('layouts.public.contact.heading') %></h1>
      <p class="text-lg text-gray-700 max-w-xl mx-auto"><%= t('layouts.public.contact.intro') %></p>
    </div>
    <div class="bg-gray-50 rounded-xl shadow p-8">
      <form action="#" method="post" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700"><%= t('layouts.public.contact.name') %></label>
          <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"><%= t('layouts.public.contact.email_label') %></label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700"><%= t('layouts.public.contact.message_label') %></label>
          <textarea id="message" name="message" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required></textarea>
        </div>
        <div>
          <button type="submit" class="w-full py-3 px-6 rounded-lg bg-forange text-white font-bold hover:bg-forange/90 transition"><%= t('layouts.public.contact.send_message') %></button>
        </div>
      </form>
      <div class="mt-8 text-center text-gray-600">
        <p><%= t('layouts.public.contact.email_label') %>: <a href="mailto:info@tawhazinnurain.org" class="text-forange hover:underline">info@tawhazinnurain.org</a></p>
        <p><%= t('layouts.public.contact.phone_label') %>: <a href="tel:+880123456789" class="text-forange hover:underline">+880 1234-56789</a></p>
        <p><%= t('layouts.public.contact.address_label') %>: 123 Main Street, Dhaka, Bangladesh</p>
      </div>
    </div>
  </div>
</section>
