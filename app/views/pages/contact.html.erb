<% content_for :title, "Contact | Taw Ha Zin Nurain Foundation" %>

<section class="bg-white py-20 min-h-[60vh]">
  <div class="max-w-2xl mx-auto px-4">
    <div class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-foundationprimarygreen mb-4">Contact Us</h1>
      <p class="text-lg text-gray-700 max-w-xl mx-auto">We'd love to hear from you! Please fill out the form below or use the contact information provided.</p>
    </div>
    <div class="bg-gray-50 rounded-xl shadow p-8">
      <form action="#" method="post" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <textarea id="message" name="message" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-forange focus:ring-forange" required></textarea>
        </div>
        <div>
          <button type="submit" class="w-full py-3 px-6 rounded-lg bg-forange text-white font-bold hover:bg-forange/90 transition">Send Message</button>
        </div>
      </form>
      <div class="mt-8 text-center text-gray-600">
        <p>Email: <a href="mailto:info@tawhazinnurain.org" class="text-forange hover:underline">info@tawhazinnurain.org</a></p>
        <p>Phone: <a href="tel:+880123456789" class="text-forange hover:underline">+880 1234-56789</a></p>
        <p>Address: 123 Main Street, Dhaka, Bangladesh</p>
      </div>
    </div>
  </div>
</section>
