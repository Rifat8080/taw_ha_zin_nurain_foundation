<% content_for :title, t('layouts.public.about.title') %>

<section class="bg-white py-20 min-h-[60vh]">
  <div class="max-w-4xl mx-auto px-4">
    <div class="mb-8 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-foundationprimarygreen mb-4"><%= t('layouts.public.about.heading') %></h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto"><%= t('layouts.public.about.intro') %></p>
    </div>
    <div class="bg-foundationprimarygreen/10 rounded-2xl shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-bold text-foundationprimarygreen mb-3"><%= t('layouts.public.about.mission_title') %></h2>
      <p class="text-gray-800 mb-4"><%= t('layouts.public.about.mission_desc') %></p>
      <ul class="list-disc list-inside text-gray-700 space-y-2">
        <% Array(t('layouts.public.about.mission_points')).each do |point| %>
          <% unless point.blank? %>
            <li><%= point %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-foundationprimarygreen mb-3"><%= t('layouts.public.about.principles_title') %></h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <% Array(t('layouts.public.about.principles')).each_with_index do |principle, idx| %>
          <% unless principle.blank? %>
            <div class="flex items-center">
              <%# Icon selection based on index %>
              <% icon_class = case idx
                when 0 then 'fa-praying-hands'
                when 1 then 'fa-graduation-cap'
                when 2 then 'fa-hands-helping'
                when 3 then 'fa-balance-scale'
                when 4 then 'fa-people-group'
                else ''
              end %>
              <i class="fas <%= icon_class %> text-forange mr-2"></i> <%= principle %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-10">
      <%= image_tag "Foundation_Logo_Side.png", class: "mx-auto h-20 w-auto rounded shadow-lg bg-white p-2 border-4 border-forange" %>
      <% reg = t('layouts.public.about.registration', default: '') %>
      <% unless reg.blank? %>
        <p class="mt-4 text-gray-600"><%= reg %></p>
      <% end %>
    </div>
  </div>
</section>
